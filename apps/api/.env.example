# Veriqko API Configuration

# Application
ENVIRONMENT=development
DEBUG=true
BASE_URL=http://localhost:8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://veriqko:veriqko@localhost:5432/veriqko

# Authentication (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-chars

# Storage
STORAGE_BASE_PATH=/data/veriqko
STORAGE_MAX_FILE_SIZE_MB=100

# Reports
REPORT_EXPIRY_DAYS=90

# Branding (White-label)
BRAND_NAME=Veriqko
BRAND_PRIMARY_COLOR=#2563eb
BRAND_SECONDARY_COLOR=#1e40af
# BRAND_LOGO_PATH=/path/to/logo.png
# BRAND_FOOTER_TEXT=Custom footer text

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text
